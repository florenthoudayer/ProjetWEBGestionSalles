{% extends 'base.html.twig' %}
{% block title %}Utilisateur{% endblock %}
{% block body %}
    <h1>Utilisateur</h1>

    <table id="t2" class="table-bordered">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ utilisateur.mdp }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{% if utilisateur.actif %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a style="color: black;" href="{{ path('utilisateur_index') }}">Retour Ã  la liste</a>
        </li>
        <li>
            <a style="color: black;" href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input class="btn btn-default" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>

{% endblock %}

