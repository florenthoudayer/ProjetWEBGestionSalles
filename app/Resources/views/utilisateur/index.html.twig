{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Utilisateurs</h1>

    <table id="myUserTable" class="table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Password</th>
                <th>Actif</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td><a href="{{ path('utilisateur_show', { 'id': utilisateur.id }) }}">{{ utilisateur.nom }}</a></td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.mdp }}</td>
                <td>{% if utilisateur.actif %}Yes{% else %}No{% endif %}</td>
                <td>{{ utilisateur.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('utilisateur_show', { 'id': utilisateur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('utilisateur_new') }}">CrÃ©er un nouveau utilisateur</a>
        </li>
    </ul>
{% endblock %}

