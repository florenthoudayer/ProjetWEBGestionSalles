{% extends 'base.html.twig' %}
{% block title %}Liste des Matieres{% endblock %}

{% block body %}
    <h1>Liste des Matieres</h1>

    <table class="table-bordered" style="width: 80%;">
        <thead>
            <tr>
                <th>Matiere</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matiere in matieres %}
            <tr>
                <td><a href="{{ path('matiere_show', { 'id': matiere.id }) }}">{{ matiere.matiere }}</a></td>
                <td>{{ matiere.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('matiere_show', { 'id': matiere.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('matiere_edit', { 'id': matiere.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <input id="c1" style="margin-top: 10px;" type="button" class="btn btn-default" value="Créer une nouvelle matière" onclick="window.location.href='{{ path('matiere_new') }}';"/>

{% endblock %}
