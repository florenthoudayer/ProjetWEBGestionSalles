{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Matieres</h1>

    <table class="table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>Matiere</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matiere in matieres %}
            <tr>
                <td><a href="{{ path('matiere_show', { 'id': matiere.id }) }}">{{ matiere.matiere }}</a></td>
                <td>{{ matiere.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('matiere_show', { 'id': matiere.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('matiere_edit', { 'id': matiere.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('matiere_new') }}">Créer une nouvelle matière</a>
        </li>
    </ul>
{% endblock %}
