<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="gestionBundle\Entity\Salles" table="salles">
    <id name="idSalle" type="integer" column="id_salle">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="25" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nbPc" type="integer" column="nb_pc" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="tableau" type="boolean" column="tableau" nullable="true"/>
    <field name="projecteur" type="boolean" column="projecteur" nullable="true"/>
  </entity>
</doctrine-mapping>
